name: CI & Performance Checks

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  build-and-test:
    name: Build, Lint & Test
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Debug - Show folder structure
        run: ls -la

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
          cache-dependency-path: my-web-app/package-lock.json

      - name: Install Dependencies
        run: cd my-web-app && npm ci

      - name: Lint
        run: cd my-web-app && npm run lint

      - name: Test
        run: cd my-web-app && npm run test

      - name: Build Application
        run: cd my-web-app && npm run build

  performance-audit:
    name: Lighthouse Performance Audit
    needs: build-and-test
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Debug - Show folder structure
        run: ls -la

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
          cache-dependency-path: my-web-app/package-lock.json

      - name: Build & Start Server + Lighthouse
        run: |
          cd my-web-app
          npm ci
          npm run build
          npm start &
          npx wait-on http://localhost:3000 --timeout 60000
          npx lighthouse-ci-action \
            --urls=http://localhost:3000 \
            --uploadArtifacts=true \
            --temporaryPublicStorage=true
