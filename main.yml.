name: CI & Performance Gate

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Debug folder structure
        run: ls -la

      - name: Install Dependencies
        run: npm ci

      - name: Lint & Test
        run: npm run lint && npm run test

      - name: Build
        run: npm run build

  performance-audit:
    needs: build-and-test
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Start Server & Lighthouse Audit
        run: |
          npm ci
          npm run build
          npm start &
          npx wait-on http://localhost:3000 --timeout 60000
          npx lighthouse-ci-action --urls=http://localhost:3000 --uploadArtifacts=true --temporaryPublicStorage=true
