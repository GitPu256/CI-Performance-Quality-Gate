name: CI & Performance Gate + Deploy

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
          cache-dependency-path: my-web-app/package-lock.json

      - name: Install Dependencies
        run: cd my-web-app && npm ci

      - name: Lint & Test
        run: cd my-web-app && npm run lint && npm run test

      - name: Build
        run: cd my-web-app && npm run build

  performance-audit:
    needs: build-and-test
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Start Server & Run Lighthouse Audit
        run: |
          cd my-web-app
          npm ci
          npm run build
          npm start &
          npx wait-on http://localhost:3000 --timeout 60000
          npx lighthouse-ci-action --urls=http://localhost:3000 --uploadArtifacts=true --temporaryPublicStorage=true

  deploy:
    needs: [build-and-test, performance-audit]
    if: github.ref == 'refs/heads/main'
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: '20'
      - run: cd my-web-app && npm ci && npm run build
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./my-web-app/build
